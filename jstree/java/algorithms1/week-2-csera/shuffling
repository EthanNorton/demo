// shuffle

public class StdRandom
{
    ...
    public static void shuffle(Object[] a)
    {
        int N = a.length;
        for (int i = 0; i < N; i++)
        {
            int r = StdRandom.uniform( i + 1);
            exch(a, i, r);
        }
    }
}
// complex sorting //

for i := 1 to 52 do begin
    r := StdRandom(51) + 1;
    swap := card[r];
    card[r] := card[i];
    card[i] := swap;
end;

