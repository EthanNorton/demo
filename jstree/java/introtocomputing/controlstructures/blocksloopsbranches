    statements
}

// using the block with the if statement 

if ( boolean-expression )
    statement
else
    statement 

if ( boolean-expression )
    statement  // this will be a commmon coding example 

// real example

if ( x > y ) {
    int temp;
    temp = x;
    x = y;
    y = temp;
}