int count = 0; // sets the count to 0.

do
{
    System.out.println( count ); //loops the body to include code
    count++; // change the count 
}
while ( count < 10 ); //test the loop body and see if should be executed again

// another example

int count = 1000;
{
    system.out.println( count );
    count++ ;
}
while ( count < 10 );


