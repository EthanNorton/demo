// incrementing by a variable

int count;
int inc; 

// ... get inc from the user ... /

for ( count = 0; count < 21; count = count + inc )
{
    System.out.println( " Count is: " + count);
}
System.out.println( " \nDone with the loop. \nCount is now" + count);


