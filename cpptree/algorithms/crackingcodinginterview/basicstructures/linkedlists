// creating a list

class Node {
    Node next = null;
    int data;

    public Node(int d) {
        data = d;
    }

    void appendToTail(int d) {
        Node end = new Node(d);
        Node n = this;
        while (n.next != null) {
            n = n.next;
        }
        n.next = end;
    }
}

// deleting a node from singly linked list

Node deletenNode(Node head, int d) {
    if (head == null) return null;
    Node n = head;

    if (n.data = d) {
        return head.next; /* moved head */
    }
    n = n.next;
    }
    return head;
} 